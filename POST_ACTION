pipeline {
    agent any
    stages {
        stage('Stage 1') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Stage 2') {
            steps {
                echo 'Hello World'
            }
            post {
                always {
                    echo 'Post action after Stage 2 step complete'
                }
            }
        }
    }
    post {
        always {
            echo 'I will always say Hello again!, After all steps completed'
        }
    }
}
